	Customer mockCustomer;
	CustomerOperationsDAO mockCustomerOperationsDAO;
	CustomerOperations customerOperations = new CustomerOperationsImpl();
	
	@BeforeEach
	public void setUp() {
		mockCustomer = mock(Customer.class);
		mockCustomerOperationsDAO = mock(CustomerOperationsDAO.class);
	}

	@Test
	void testNewCustomerRegistration() throws BussinessException {
		
		mockCustomer.setName("sagar");
		mockCustomer.setEmail("sagar@gmail.com");
		mockCustomer.setPass("qwerty");
		mockCustomer.setNumber(1234567890);
		mockCustomer.setSsn(123456789);
		mockCustomer.setGender("male");
		mockCustomer.setDob(new Date());
		mockCustomer.setAddress("");
		mockCustomer.setAge(0);
		
		when(mockCustomerOperationsDAO.newCustomerRegistration(mockCustomer)).thenReturn(1);
	
	}

